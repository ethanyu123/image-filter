{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": [
                "types/*"
            ]
        },
        "target": "es2015",
        "module": "commonjs",
        "lib": [
            "es2017",
            "dom"
        ],
        "declaration": true,
        "sourceMap": false,
        "outDir": "./dist", /* Redirect output structure to the directory. */
        "noImplicitAny": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*.ts",
        "index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}