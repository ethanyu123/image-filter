{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": [
                "types/*"
            ]
        },
        "target": "es6",
        "module": "esnext",
        "declaration": true,
        "sourceMap": false,
        "outDir": "./dist",
        "noImplicitAny": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*.ts",
        "index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}